
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:id="@+id/home_thumb_card"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:rippleColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/list_card_corner_radius"
        app:cardElevation="@dimen/episodes_list_card_elevation"
        app:cardBackgroundColor="@color/card"
        app:cardUseCompatPadding="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/home_thumb"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="match_parent"/>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_list_title"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="?android:attr/textColorPrimary"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="@+id/home_thumb_card"
        app:layout_constraintEnd_toEndOf="@+id/home_thumb_card"
        app:layout_constraintTop_toBottomOf="@+id/home_thumb_card"
        android:maxLines="@integer/episodes_list_detail_max_lines"
        android:ellipsize="end" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_list_subtitle"
        style="@style/TextAppearance.AppCompat.Small"
        android:textColor="?android:attr/textColorSecondary"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="@+id/home_list_title"
        app:layout_constraintEnd_toEndOf="@+id/home_list_title"
        app:layout_constraintTop_toBottomOf="@+id/home_list_title"
        android:maxLines="@integer/episodes_list_detail_max_lines"
        android:ellipsize="end" />

</android.support.constraint.ConstraintLayout>
