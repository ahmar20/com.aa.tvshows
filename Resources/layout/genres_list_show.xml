<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:longClickable="true"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/shows_list_cardView"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/list_card_corner_radius"
    app:cardElevation="@dimen/episodes_list_card_elevation"
    app:contentPadding="10dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:id="@+id/genres_show_title"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:maxLines="@integer/episodes_list_detail_max_lines"
            android:layout_toStartOf="@id/genres_show_year"
            style="@style/TextAppearance.AppCompat.Medium"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/genres_show_year"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/genres_list_year_margin"
            style="@style/TextAppearance.AppCompat.Caption"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>