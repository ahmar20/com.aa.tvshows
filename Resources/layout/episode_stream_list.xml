<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:longClickable="true"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:rippleColor="@color/colorAccent"
    app:cardCornerRadius="@dimen/list_card_corner_radius"
    app:cardElevation="@dimen/episodes_list_card_elevation"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/margin_8dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/stream_host_imageview"
            android:layout_alignParentStart="true"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stream_host_titletext"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_toEndOf="@id/stream_host_imageview"
            android:layout_centerVertical="true"
            />
</RelativeLayout>

</com.google.android.material.card.MaterialCardView>