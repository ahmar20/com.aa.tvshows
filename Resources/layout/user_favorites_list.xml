<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:longClickable="true"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/favorites_list_cardView"
    android:foreground="?android:attr/selectableItemBackground"
    app:rippleColor="@color/colorPrimary"
    app:cardCornerRadius="@dimen/list_card_corner_radius"
    app:cardElevation="@dimen/episodes_list_card_elevation"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/favorites_list_imageView"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/favorites_list_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_marginStart="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/favorites_list_imageView"
            android:maxLines="@integer/episodes_list_detail_max_lines"
            android:ellipsize="end" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/title_bottom_space"
            android:layout_below="@id/favorites_list_title"
            android:layout_toRightOf="@id/favorites_list_imageView"
        />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/favorites_list_episode_detail"
            android:layout_below="@id/title_bottom_space"
            android:layout_toRightOf="@id/favorites_list_imageView"
            android:maxLines="@integer/episodes_list_detail_max_lines"
            android:layout_marginStart="5dp"
            android:ellipsize="end" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/favorites_list_info_detail"
            android:layout_below="@id/favorites_list_episode_detail"
            android:layout_toRightOf="@id/favorites_list_imageView"
            android:maxLines="@integer/episodes_list_detail_max_lines"
            android:layout_marginStart="5dp"
            android:ellipsize="end" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/info_bottom_space"
            android:layout_below="@id/favorites_list_info_detail"
            android:layout_toRightOf="@id/favorites_list_imageView"
        />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/favorites_list_last_ep_detail"
            android:layout_below="@id/info_bottom_space"
            android:layout_toRightOf="@id/favorites_list_imageView"
            android:maxLines="@integer/episodes_list_detail_max_lines"
            android:layout_marginStart="5dp"
            android:ellipsize="end" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/favorites_list_next_ep_detail"
            android:layout_below="@id/favorites_list_last_ep_detail"
            android:layout_toRightOf="@id/favorites_list_imageView"
            android:maxLines="@integer/episodes_list_detail_max_lines"
            android:layout_marginStart="5dp"
            android:ellipsize="end" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>